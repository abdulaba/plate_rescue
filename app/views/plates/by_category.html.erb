<div class="container mt-4">
  <h1 class="mb-4">Plates in Category: <%= @category.name %></h1>
  <p class="mb-4">Plates found: <%= @plates.count %></p>
  <div class="row">
    <% @plates.each do |plate| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to plate.restaurant.name, restaurant_path(plate.restaurant) %></h5>
            <p class="card-text">From: <%= plate.restaurant.name %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-4">
  <%= link_to 'Back', restaurants_path, class: 'btn btn-primary' %>
</div>
