<div class="container">
  <h1>Plates for <%= @restaurant.name %></h1>
  <h5><%= @restaurant.address %></h5>

  <%#= link_to 'New Plate', new_restaurant_plate_path(@restaurant), class: 'btn btn-primary' %>

  <div class="row">
    <% @restaurant.plates.each do |plate| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="<%= plate.photo.url %>" alt="<%= plate.name %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title">
            <%= link_to plate.name, plate_path(plate) %></h5>
            <p class="card-text"><%= plate.stock %> items in stock</p>
            <p class="card-text">Cooked on <%= plate.cooked_date %></p>
            <p class="card-text"><%=number_to_currency(plate.new_price, precision: 2) %></p>
            <p><del><%= number_to_currency(plate.old_price, precision: 2) %></del></p>
            <%= button_to "Add to Cart", selectedplates_path(plate_id: plate.id), class: "btn btn-primary bnt-sm" %>
            <%#= link_to 'Show', plate_path(plate), class: 'btn btn-primary' %>
            <%#= link_to 'Edit', edit_plate_path(plate), class: 'btn btn-secondary' %>
            <%#= link_to 'Destroy', plate_path(plate), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
