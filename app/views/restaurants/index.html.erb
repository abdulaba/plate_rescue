  <h1 class="my-4">Find your restaurant</h1>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-lg-4 col-sm-6 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h4 class="card-title"><%= restaurant.name %></h4>
