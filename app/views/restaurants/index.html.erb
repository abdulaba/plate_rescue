<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="display-4 mb-5">Explore Our Restaurants</h1>
      <div class="row">
        <% @restaurants.each do |restaurant| %>
          <div class="col-lg-6">
            <div class="card mb-4 shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= restaurant.name %></h5>
                <p class="card-text"><%= restaurant.address %></p>
                <div class="card-text">
                  <% if restaurant.photo.present? %>
                    <%= cl_image_tag restaurant.photo.key, width: 400, height: 300, crop: :fill, class: "img-fluid rounded mb-2" %>
                  <% end %>
                </div>
                <%= link_to 'Show more', restaurant_path(restaurant), class: 'btn btn-primary rounded-pill' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <%= link_to 'New restaurant', new_restaurant_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
