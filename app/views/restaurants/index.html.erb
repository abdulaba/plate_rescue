<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <h1 class="display-4 mb-5">Explore Our Restaurants in </h1>
      <div class="row">
        <% @restaurants.each do |restaurant| %>
          <div class="card-trip col-lg-4">
            <div class="card">
              <%= link_to restaurant_path(restaurant) do %>
                <% if restaurant.photo.present? %>
                  <%= cl_image_tag restaurant.photo.key, width: 300, height: 200, crop: :fill, class: "card-img-top img-fluid rounded mb-2" %>
                <% end %>
              <% end %>
              <div class="card-trip-infos card-body">
                <div>
                  <h4 class="card-title"><%= restaurant.name %></h4>
                  <h6 class="card-text"><strong>Created:</strong> <%= time_ago_in_words(restaurant.created_at) %> ago</h6>
                </div>
                <% counter = 0 %>
                <% restaurant.plates.each do |plate| %>
                  <% counter += plate.old_price %>
                  <% counter -= plate.new_price %>
                <% end %>
                <h4 class="card-trip-pricing">Save up to: $<%= counter %></h4>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
