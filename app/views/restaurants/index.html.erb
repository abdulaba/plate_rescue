
<div class="container mt-5">
  <div class="d-flex flex-wrap justify-content-center mt-5">
  <ul>
    <% @categories.each do |category| %>
    <li>
      <div class="p-2">
        <%= link_to category.name, plates_by_category_path(category.id) %>
      </div>
    <% end %>
    </li>
  </ul>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-10">
      <h1 class="display-4 mb-5">Explore Our Restaurants in </h1>
      <div class="row">
        <% @restaurants.each do |restaurant| %>
          <div class="outer m-2">
            <div class="inner">
              <%= link_to restaurant_plates_path(restaurant) do %>
                <% if restaurant.photo.present? %>
                  <%= cl_image_tag restaurant.photo.key, width: 300, height: 200, crop: :fill, class: "card-img-top img-fluid rounded mb-2", style: "border-radius: 50px;" %>
                <% end %>
              <% end %>
            </div>
            <div class="item">
              <div class="item-name">
                <h4><%= restaurant.name %></h4>
              </div>
              <div class="item-price">
                <% counter = 0 %>
                <% restaurant.plates.each do |plate| %>
                  <% counter += plate.old_price %>
                  <% counter -= plate.new_price %>
                <% end %>
                <p>Up to: $<%= counter %> off!</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
