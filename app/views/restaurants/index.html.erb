<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="display-4 mb-5">Explore Our Restaurants</h1>
      <div class="row">
        <% @restaurants.each do |restaurant| %>
          <div class="col-lg-6">
            <div class="card mb-4 shadow-sm">
              <div class="card-body">
                <h5 class="card-title text-primary text-decoration-underline"><%= restaurant.name %></h5>
                <p class="card-text"><strong>Created:</strong> <%= time_ago_in_words(restaurant.created_at) %> ago</p>
                <% counter = 0 %>
                 <% restaurant.plates.each do |plate| %>
                  <% counter += plate.old_price  %>
                  <% counter -= plate.new_price %>
                <% end %>
                <p>Save up to: $<%= counter %></p>
                <div class="card-text">
                  <% if restaurant.photo.present? %>
                    <%= cl_image_tag restaurant.photo.key, width: 400, height: 300, crop: :fill, class: "img-fluid rounded mb-2" %>
                  <% end %>
                </div>
                <%= link_to 'View Dishes', restaurant_plates_path(restaurant), class: 'btn btn-success rounded-pill' %>
              </div>
            </div>
            <!--
            <div style="width: 100%; height: 600px;"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
              -->
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
