<div class="container d-flex justify-content-center">
  <div class="col-lg-6 col-sm-12 mb-4">
    <h1 class="my-4 text-center">Restaurant Details</h1>
    <div class="card h-75">
      <div class="card-body">
        <h4 class="card-title text-center"><%= @restaurant.name %></h4>
        <p class="card-text"><%= @restaurant.address %></p>
        <p class="card-text">Opening Date: <%= @restaurant.opening_date %></p>
        <p class="card-text">Opening Time: <%= @restaurant.opening_time %></p>
        <p class="card-text">Created: <%= time_ago_in_words(@restaurant.created_at) %> ago</p>
      </div>
    </div>

    <div class="my-4">
      <%= link_to 'Back', restaurants_path, class: 'btn btn-secondary mr-2 rounded-pill' %>
      <%= link_to 'Home', root_path, class: 'btn btn-secondary mr-2 rounded-pill' %>
      <%= link_to 'Edit restaurant', edit_restaurant_path(@restaurant), class: 'btn btn-primary mr-2 rounded-pill' %>
      <%= link_to 'Delete restaurant', restaurant_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger rounded-pill' %>
    </div>
  </div>
</div>
