<div class="vh-100 d-flex flex-column justify-content-center align-items-center">
  <h3 class="m-3 text-center">Partner Signup</h3>
  <div class="col-lg-6 col-sm-12">
    <%= simple_form_for(@restaurant, html: { class: 'p-4 rounded' }) do |f| %>
      <div class="form-group">
        <%= f.input :name, label: 'Restaurant Name', input_html: { class: 'form-control', placeholder: 'Enter restaurant name' } %>
      </div>
      <div class="form-group">
        <%= f.input :address, label: 'Address', input_html: { class: 'form-control', placeholder: 'Enter address' } %>
      </div>
      <div class="form-group">
       <%= f.input :opening_date, as: :date, label: 'Opening Date', class: 'form-control', html5: true %>
      </div>
      <div class="form-group">
        <%= f.input :opening_time, label: 'Opening Time', input_html: { class: 'form-control', placeholder: 'Enter opening time' } %>
      </div>
      <div class="form-group">
        <%= f.input :photo, as: :file, label: 'Photo', input_html: { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    <% end %>
    <div class="text-center mt-4">
      <%= link_to "Back to Restaurants", restaurants_path %>
    </div>
  </div>
</div>
